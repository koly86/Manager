    10: qOrdersNSTSTUS.AsString := 'Утвержден менеджером';
    20: qOrdersNSTSTUS.AsString := 'Утвержден руководителем';
    30: qOrdersNSTSTUS.AsString := 'Получен производством';
    40: qOrdersNSTSTUS.AsString := 'Утвержден в производство';
    45: qOrdersNSTSTUS.AsString := 'Принят конструктором';
    50: qOrdersNSTSTUS.AsString := 'Разработана технология';
    60: qOrdersNSTSTUS.AsString := 'Утверждена технология';
    70: qOrdersNSTSTUS.AsString := 'Принят в изготовление';
    100: qOrdersNSTSTUS.AsString := 'Изготовлен полностью';
    110: qOrdersNSTSTUS.AsString := 'Вывезен полностью';
    120: qOrdersNSTSTUS.AsString := 'Выписан полностью';
  end;
end;

